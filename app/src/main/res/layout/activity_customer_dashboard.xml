<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <RelativeLayout
        android:id="@+id/rlHeader"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <ImageView
            android:id="@+id/ivMenu"

            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_baseline_menu_24" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/ivMenu"
            android:background="@drawable/footerlogo" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"

        android:layout_height="1dp"
        android:layout_below="@+id/rlHeader"
        android:background="@color/white" />


        <RelativeLayout
            android:layout_below="@+id/rlHeader"
            android:id="@+id/rl"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:padding="5dp"
                android:id="@+id/tvLoanId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:text="Proferma Number"/>
            <Spinner
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/sp"
                android:background="@drawable/rectangle_gradient_white"
                android:layout_below="@+id/tvLoanId"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:backgroundTint="@color/grey"
                android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"/>




        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@+id/rl"
            android:layout_width="match_parent"
            android:id="@+id/rcvDashBoard"
            android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>



</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="3dp"
    android:background="@drawable/bgg"
    android:layout_margin="3dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:background="@drawable/edit_boarder"
        android:padding="10dp"
        android:id="@+id/live_ll"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:text=""
            android:background="@drawable/bgg_red"
            android:gravity="center_vertical"

            android:padding="5dp"
            android:layout_gravity="right"


            android:textColor="@color/black"

            android:layout_height="match_parent">
        </TextView>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:padding="2dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Member Name|Id"
                    android:gravity="center_vertical"

                    android:textColor="@color/black"

                    android:layout_height="match_parent">
                </TextView>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="EMI Amount"
                    android:gravity="center_vertical"

                    android:textStyle="bold"


                    android:textColor="@color/black"

                    android:layout_height="match_parent">
                </TextView>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="Due Installment"
                    android:gravity="center_vertical"
                    android:textStyle="bold"



                    android:textColor="@color/black"

                    android:layout_height="match_parent">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:padding="2dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="0dp"
                    android:layout_weight="1"

                    android:text=""
                    android:gravity="center_vertical"



                    android:textColor="@color/black"

                    android:layout_height="match_parent">
                </TextView>
                <TextView
                    android:id="@+id/tv2"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text=""
                    android:gravity="center_vertical"



                    android:textColor="@color/black"

                    android:layout_height="match_parent">
                </TextView>
                <TextView
                    android:id="@+id/tv3"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text=""
                    android:gravity="center_vertical"



                    android:textColor="@color/black"

                    android:layout_height="match_parent">
                </TextView>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:padding="2dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Profarma No"
                    android:gravity="center_vertical"
                    android:textStyle="bold"



                    android:textColor="@color/black"

                    android:layout_height="match_parent">
                </TextView>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="Status"
                    android:gravity="center_vertical"

                    android:textStyle="bold"


                    android:textColor="@color/black"

                    android:layout_height="match_parent">
                </TextView>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="TotalAmount"
                    android:gravity="center_vertical"
                    android:textStyle="bold"



                    android:textColor="@color/black"

                    android:layout_height="match_parent">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:padding="2dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="0dp"
                    android:layout_weight="1"

                    android:text="66666666"
                    android:gravity="center_vertical"



                    android:textColor="@color/black"

                    android:layout_height="match_parent">
                </TextView>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text=""
                    android:gravity="center_vertical"
                    android:id="@+id/tv5"
                    android:textColor="@color/red"

                    android:layout_height="match_parent">
                </TextView>
                <TextView
                    android:id="@+id/tv6"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text=""
                    android:gravity="center_vertical"



                    android:textColor="@color/black"

                    android:layout_height="match_parent">
                </TextView>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/darkgrey"
        android:layout_marginTop="5dp"
        android:layout_height="4dp">

    </View>


</LinearLayout>

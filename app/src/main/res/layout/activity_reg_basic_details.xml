<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rlHeader"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/purple_500">
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/ic_baseline_arrow_back_24" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/ivBack"
            android:text="Basic Details"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_signUp"
        android:layout_below="@+id/rlHeader"
        android:fillViewport="true"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/blue"
                android:textStyle="bold"
                android:text="Basic Details*"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <LinearLayout android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtMemberName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Member Name"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtMobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Mobile"
                        android:inputType="number"
                        android:maxLength="10" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtFathersHusband"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Father's Name" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtHusband"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Husband's Name" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtaltMobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Alternate Mobile No."
                        android:inputType="number"
                        android:maxLength="10" />
                </com.google.android.material.textfield.TextInputLayout>
                <Spinner
                    android:id="@+id/tvSelectType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/bgg"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/darkgrey"
                    android:textSize="17dp" />
                <TextView
                    android:id="@+id/tvRegistrationDatee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/bgg"
                    android:hint="Registration Date"
                    android:inputType="text"
                    android:padding="15dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/darkgrey"
                    android:textSize="17dp" />
                <Spinner
                    android:id="@+id/tvSelectType1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/bgg"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/darkgrey"
                    android:textSize="17dp" />
                <Spinner
                    android:id="@+id/tvLoanPlan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/bgg"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/darkgrey"
                    android:textSize="17dp" />
                <TextView
                    android:id="@+id/tvDOB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/bgg"
                    android:hint="DOB"
                    android:inputType="text"
                    android:padding="15dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/darkgrey"
                    android:textSize="17dp" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_age"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLength="2"
                        android:hint="Age"/>                    />
                </com.google.android.material.textfield.TextInputLayout>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:hint="Gender"
                    android:inputType="text"
                    android:padding="15dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/darkgrey"
                    android:textSize="17dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal">
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RadioButton
                            android:id="@+id/tvMale"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:text="Male"
                            android:textSize="17dp" />
                        <RadioButton
                            android:id="@+id/tvFemale"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:text="Female"
                            android:textSize="17dp" />
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:text="Other"
                            android:id="@+id/tvOther"
                            android:textSize="17dp" />
                    </RadioGroup>
                </LinearLayout>
                <Spinner
                    android:id="@+id/employee_sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/bgg"
                    android:inputType="text"
                    android:padding="10dp"
                    android:entries="@array/array_emp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/darkgrey"
                    android:textSize="17dp" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Address"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtDistrict"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="District"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtaadhar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Aadhar No*"
                        android:maxLength="12"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:gravity="center_vertical"
                    android:text="Aadhar Front Pic"
                    android:textColor="@color/black" />

                <LinearLayout  android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp" android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/aadhar_font_ll"
                        android:background="@drawable/kyc_rectangle"
                        android:layout_width="match_parent"
                        android:layout_height="80dp">
                        <ImageView   android:id="@+id/aadhar_font_img"
                            android:padding="10dp"
                            android:background="@drawable/kyc_upload"
                            android:layout_width="60dp"
                            android:layout_gravity="center_vertical"
                            android:layout_height="match_parent"></ImageView>
                        <TextView
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:gravity="center_horizontal"
                            android:text="Aadhar Front Pic\nPicture"
                            android:textColor="@color/white" />
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:text="Aadhar Back "
                        android:textColor="@color/black" />

                    <LinearLayout android:id="@+id/aadhar_back_ll"
                        android:background="@drawable/kyc_rectangle"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="80dp">
                        <ImageView android:id="@+id/aadhar_back_img"
                            android:padding="10dp"
                            android:background="@drawable/kyc_upload"
                            android:layout_width="60dp"
                            android:layout_gravity="center_vertical"
                            android:layout_height="match_parent"
                            ></ImageView>
                        <TextView
                            android:layout_gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:gravity="center_horizontal"
                            android:text="Aadhar Back \nPicture"
                            android:textColor="@color/white" />
                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:text="Profile Pic"
                        android:textColor="@color/black" />

                    <LinearLayout android:id="@+id/profile_ll"
                        android:background="@drawable/kyc_rectangle"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="80dp">
                        <ImageView android:id="@+id/profile_img"
                            android:padding="10dp"
                            android:background="@drawable/kyc_upload"
                            android:layout_width="60dp"
                            android:layout_gravity="center_vertical"
                            android:layout_height="match_parent"
                            ></ImageView>
                        <TextView
                            android:layout_gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:gravity="center_horizontal"
                            android:text="Profile \nPicture"
                            android:textColor="@color/white" />
                    </LinearLayout>
                    
                </LinearLayout>
                
                
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/blue"
                android:textStyle="bold"
                android:text="Bank Details"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:inputType="text"
                    android:text="Bank Name*"
                    android:textColor="@color/black"
                    android:textColorHint="@color/darkgrey"
                    android:textSize="17dp" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_bankname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Bank Name*" />
                </com.google.android.material.textfield.TextInputLayout>
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:inputType="text"
                    android:text="Account No*"
                    android:textColor="@color/black"
                    android:textColorHint="@color/darkgrey"
                    android:textSize="17dp" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_accountno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Account No*"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:inputType="text"
                    android:text="IFSC Code*"
                    android:textColor="@color/black"
                    android:textColorHint="@color/darkgrey"
                    android:textSize="17dp" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_ifsc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="IFSC Code*"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:inputType="text"
                    android:text="Account Holder Name*"
                    android:textColor="@color/black"
                    android:textColorHint="@color/darkgrey"
                    android:textSize="17dp" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_accholdername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Account Holder Name*"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:inputType="text"
                    android:text="Branch Name*"
                    android:textColor="@color/black"
                    android:textColorHint="@color/darkgrey"
                    android:textSize="17dp" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_branchname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Branch Name*" />
                </com.google.android.material.textfield.TextInputLayout>
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:inputType="text"
                    android:text="Cheque Book/Passbook Pic*"
                    android:textColor="@color/black"
                    android:textColorHint="@color/darkgrey"
                    android:textSize="17dp" />
                <LinearLayout  android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp" android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout android:id="@+id/passbook_ll"
                        android:background="@drawable/kyc_rectangle"
                        android:layout_width="match_parent"
                        android:layout_height="80dp">
                        <ImageView   android:id="@+id/passbook_img"
                            android:padding="10dp"
                            android:background="@drawable/kyc_upload"
                            android:layout_width="60dp"
                            android:layout_gravity="center_vertical"
                            android:layout_height="match_parent"></ImageView>
                        <TextView
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:gravity="center_horizontal"
                            android:text="Cheque Book/Passbook\nPicture"
                            android:textColor="@color/white" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btn_signUp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textStyle="bold" />
</RelativeLayout>
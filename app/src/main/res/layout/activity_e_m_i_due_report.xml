<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#F9F2E0"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp">
            <ImageView
                android:id="@+id/menuImg"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:tint="@color/white"
                android:src="@drawable/ic_baseline_arrow_back_24" />
            <TextView android:id="@+id/title_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="17dp"
                android:layout_toRightOf="@id/menuImg"
                android:gravity="center_vertical"
                android:layout_marginRight="50dp"
                android:text="EMI Due Report"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold" />

            <ImageView android:layout_alignParentRight="true"
                android:layout_width="50dp"  android:id="@+id/pdf_img"
                android:layout_height="50dp"
                android:padding="5dp" android:visibility="gone"
                android:backgroundTint="@color/white"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:background="@drawable/blue_solid_circle"
                android:src="@drawable/pdf" />

        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <SearchView android:visibility="gone"
        android:backgroundTint="@color/white"
        android:background="@drawable/rectangle_white"
        android:layout_width="match_parent"
        android:id="@+id/search"
        android:iconifiedByDefault="false"
        android:queryHint="Search here....."
        android:layout_height="wrap_content">

    </SearchView>

    <LinearLayout
        android:layout_below="@+id/top_rl"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout android:visibility="gone"
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView android:id="@+id/mStartTime"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Start Date"
            android:textAlignment="center"
            android:padding="10dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/bgg_red"
            android:layout_height="wrap_content">

        </TextView>
        <TextView android:id="@+id/mEndTime"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="End Date"
            android:textAlignment="center"
            android:padding="10dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/bgg_red"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Search"
            android:textAlignment="center"
            android:padding="10dp" android:textColor="@color/white"
            android:backgroundTint="@color/blue"
            android:layout_marginRight="2dp"
            android:background="@drawable/rectangle_gradient_white"
            android:layout_height="wrap_content">

        </TextView>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content">
        <ImageView android:visibility="gone"
            android:id="@+id/norecord_tv"
            android:layout_centerInParent="true"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:src="@drawable/no"
            />
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/srl_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cust_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible" />
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </RelativeLayout>

</LinearLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg"
    android:layout_height="match_parent"
    tools:context=".login.WelcomActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:visibility="gone"
                android:textColor="@color/white"
                android:text="WELCOME"
                android:id="@+id/tvWelcome"
                
                android:textSize="30dp"
                android:layout_marginTop="50dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" />
            <TextView
                android:textColor="@color/white"
                android:text="TO"
                android:visibility="gone"
                android:id="@+id/tvTo"
                android:layout_below="@+id/tvWelcome"
                
                android:textSize="28dp"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" />

            <ImageView
                android:id="@+id/ivLogo"
                android:layout_below="@+id/tvTo"
                android:src="@drawable/footerlogo"
                android:layout_width="match_parent"
                android:layout_height="220dp"/>
            <LinearLayout
                android:id="@+id/ll"
                android:layout_below="@+id/ivLogo"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="15dp"
                    android:backgroundTint="#E0E0E0"
                    android:background="@drawable/rectangle_gradient_white"
                    android:orientation="horizontal">
                    <ImageView
                        android:tint="@color/black"
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:padding="5dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_baseline_perm_identity_24" />
                    <View
                        android:layout_width="5dp"
                        android:layout_height="match_parent"
                        android:background="@color/white" />
                    <Spinner
                        android:id="@+id/tvSelectType"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:outlineSpotShadowColor="@color/white"
                        android:backgroundTint="@color/black"
                        android:hint="Select Type"
                        android:textSize="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/llCustomer"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_height="match_parent">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:id="@+id/edt_mobile"
                            android:hint="Enter Mobile No."
                            android:maxLength="10"
                            android:textSize="21dp"
                            
                            android:inputType="number"
                            android:drawableTint="@color/black"
                            android:drawableRight="@drawable/ic_phone"
                            android:layout_height="wrap_content">
                        </com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llCollectorLogin"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_height="match_parent">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:id="@+id/edtUserId"
                            android:hint="Enter User Id"
                            android:textSize="21dp"
                            
                            android:drawableTint="@color/black"
                            android:drawableRight="@drawable/ic_baseline_perm_contact_calendar_24"
                            android:layout_height="wrap_content">
                        </com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        app:passwordToggleTint="@color/black"
                        app:passwordToggleEnabled="true"
                        android:layout_height="match_parent">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:hint="Enter Password"
                            android:textSize="21dp"
                            android:id="@+id/edt_password"
                            android:inputType="textPassword"
                            android:layout_height="wrap_content">
                        </com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <Button
                    android:backgroundTint="@color/red"
                    android:id="@+id/btnLogin"
                    android:layout_width="250dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_height="60dp"
                    android:textColor="@color/white"
                    android:textSize="21dp"
                    android:textAlignment="center"
                    android:text="Login"
                    android:textAllCaps="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center" />

            </LinearLayout>
            <TextView
                android:visibility="gone"
                android:id="@+id/tvForgot"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll"
                android:text="Forgot Password?"
                android:textColor="@color/white"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
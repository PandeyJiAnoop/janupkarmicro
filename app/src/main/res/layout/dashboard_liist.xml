<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:backgroundTint="#eee"
    android:background="@drawable/rectangle_white"
    android:orientation="vertical"
    android:layout_margin="2dp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivMoneyy"
            android:src="@drawable/person"
            android:layout_width="20dp"
            android:layout_centerVertical="true"
            android:layout_height="20dp"/>
        <TextView
            android:id="@+id/tvMemberId"
            android:textIsSelectable="true"
            android:text="Member Id: 101"
            android:textColor="@color/orange"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/ivMoneyy"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </RelativeLayout>
    <TextView
        android:layout_marginLeft="10dp"
        android:textSize="15dp" android:textIsSelectable="true"
        android:id="@+id/tvLoanID"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Loan Id: 16"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <TextView
        android:layout_marginLeft="10dp"
        android:textSize="14dp" android:textIsSelectable="true"
        android:id="@+id/tvMemberName"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Member Name: Rahul"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_height="95dp">
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/ivRupes"
                    android:src="@drawable/money"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"

                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    />
                <TextView
                    android:id="@+id/tvInstAmount"
                    android:layout_marginTop="10dp"

                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/ivRupes"
                    android:layout_width="match_parent"
                    android:text="Inst.Amt\n₹30000"
                    android:textSize="12dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"/>

            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/ivPaid"
                    android:src="@drawable/money"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"

                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    />
                <TextView
                    android:id="@+id/tvPaidAmount"
                    android:layout_marginTop="10dp"

                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/ivPaid"
                    android:layout_width="match_parent"
                    android:text="Paid.Inst\n₹30000"
                    android:textSize="12dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"/>

            </RelativeLayout>



        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/ivDue"
                    android:src="@drawable/money"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"

                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    />
                <TextView
                    android:id="@+id/tvdueAmount"
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/ivDue"
                    android:layout_width="match_parent"
                    android:text="Due.Amt\n₹30000"
                    android:textSize="12dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"/>

            </RelativeLayout>


        </androidx.cardview.widget.CardView>




    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvInstallmentt"
                android:text="Due Installments : 9"
                android:textColor="@color/darkorange"
                android:textSize="16dp"
                android:textStyle="bold" android:textIsSelectable="true"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_below="@+id/tvInstallmentt"
                android:textIsSelectable="true"
                android:text="(Disbursement on 27-8-2018)"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:id="@+id/tvDistributerDate"
                android:textStyle="bold"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <View
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/darkorange"/>
</LinearLayout>